<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Encurtador de URL</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Encurtador de URL</h1>
    <form action="/shortUrls" method="post" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">URL</label>
      <input type="url" name="fullUrl" id="fullUrl" placeholder="Digite a URL" class="form-control col mr-2" required>
      <button type="submit" class="btn btn-primary">Encurtar</button>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>URL</th>
          <th>URL Curta</th>
          <th>Cliques</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank" rel="noopener"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>" target="_blank" rel="noopener"><%= host %>/<%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
